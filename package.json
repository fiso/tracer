{
  "name": "webtemplate",
  "version": "2.0.11",
  "description": "Akademi webpage template",
  "author": "Akademiâ„¢",
  "private": true,
  "license": "UNLICENSED",
  "main": "index.js",
  "config": {
    "port": "8080"
  },
  "scripts": {
    "clean": "rm -Rf build/ && mkdir build",
    "build": "npm run clean && npm version patch && NODE_ENV=production webpack",
    "dev": "npm run clean && NODE_ENV=development concurrently --kill-others 'serve build/' 'webpack --watch --progress'",
    "fix-permissions": "chmod -R ugo+r *",
    "deploy-stage": "npm run build && npm run fix-permissions && rsync -a ./build/ ubuntu@stage.studioakademi.com:/var/www/tracer.stage.studioakademi.com/",
    "svgo": "find src/assets/img -name '*.svg' -type f -exec npx svgo {} \\;"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-loader": "^7.1.3",
    "babel-preset-env": "^1.6.1",
    "concurrently": "^3.5.1",
    "copy-webpack-plugin": "^4.4.2",
    "css-loader": "^0.28.10",
    "eslint": "^4.18.1",
    "eslint-config-google": "^0.9.1",
    "eslint-plugin-async-await": "0.0.0",
    "extract-text-webpack-plugin": "^3.0.2",
    "html-webpack-plugin": "^2.30.1",
    "ncp": "^2.0.0",
    "node-sass": "^4.7.2",
    "sass-lint": "^1.12.1",
    "sass-loader": "^6.0.6",
    "serve": "^6.5.0",
    "shared-git-hooks": "^1.2.1",
    "style-loader": "^0.20.2",
    "svgo": "^1.0.4",
    "webpack": "^3.11.0"
  }
}
